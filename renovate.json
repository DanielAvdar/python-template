{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "python": {
    "lockFileMaintenance": {
      "enabled": true
    }
  },
  "schedule": [
    "at any time"
  ],
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "uv"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "github-actions"
      ]
    },
    {
      "matchManagers": [
        "uv",
        "pip",
        "poetry",
        "pipenv"
      ],
      "labels": [
        "python"
      ]
    }
  ]
}
