{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "python": {
    "lockFileMaintenance": {
      "enabled": true
    }
  },
  "schedule": [
    "at any time"
  ],
  "labels": [
    "renovate"
  ],
  "prTitle": "renovate: {{description}}",
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "github-actions"
      ]
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "labels": [
        "pre-commit"
      ]
    },
    {
      "matchManagers": [
        "pip-compile",
        "pip_requirements",
        "pip_setup",
        "pipenv",
        "poetry"
      ],
      "labels": [
        "python"
      ]
    }
  ]
}
